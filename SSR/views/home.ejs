
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TailwindCSS Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-gray-200 flex items-center justify-center">
    <main class="w-full max-w-md">
      <div class="bg-white shadow-xl rounded-2xl p-6 sm:p-8">
        <div class="text-center font-medium text-2xl">Create Account</div>

        <!-- Form -->
        <form id="myForm" class="space-y-5" method="post" action="#">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- First Name -->
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700">First name</label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                placeholder="Faij"
                required
                class="mt-1 block w-full rounded-xl border border-gray-300 px-3 py-2"
              />
            </div>

            <!-- Last Name -->
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700">Last name</label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                placeholder="Ansari"
                required
                class="mt-1 block w-full rounded-xl border border-gray-300 px-3 py-2"
              />
            </div>
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="you@example.com"
              required
              class="mt-1 block w-full rounded-xl border border-gray-300 px-3 py-2"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="••••••••"
              required
              class="mt-1 block w-full rounded-xl border border-gray-300 px-3 py-2"
            />
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full rounded-xl bg-gray-900 px-4 py-2 text-white font-medium shadow hover:opacity-90"
          >
            Create account
          </button>
        </form>
      </div>
    </main>

   
  </body>
</html>
