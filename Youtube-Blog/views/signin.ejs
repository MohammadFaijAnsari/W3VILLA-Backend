<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partils/head') %>
    <title>SignIn Page</title>
</head>
<body class="bg-primary-subtle">
  <!-- Navbar Add Using SSR -->
  <%- include('partils/navbar') %>
    <!-- Centered Form -->
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
      <div class="card p-4" style="width: 400px; border-radius: 15px;">
        <% if (locals.error) { %>
          <div class="alert alert-danger text-center py-2 mb-3" role="alert">
            <%= locals.error %>
            </div>
          <% } %>
            <% if (locals.success) { %>
              <div class="alert alert-success text-center">
                <%= locals.success %>
              </div>

              <script>
                setTimeout(() => {
                  window.location.href = "/";
                }, 2000); 
              </script>
              <% } %>

                <h3 class="text-center mb-4">Sign In</h3>
                <form action="/user/signin" method="post">
                  <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password"
                      placeholder="Enter your password">
                  </div>
                  <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary w-50 me-2">Login</button>
                    <button type="reset" class="btn btn-danger w-50">Reset</button>
                  </div>
                </form>
                <p class="text-center mt-3 mb-0">
                  Already have an account? <a href="/user/signup" class="text-decoration-none">Sign Up</a>
                </p>
      </div>
    </div>
    <!-- Footer Include -->
    <%- include('partils/footer') %>
      <%- include('partils/scripts') %>
</body>

</html>