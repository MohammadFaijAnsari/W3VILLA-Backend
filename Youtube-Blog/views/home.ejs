<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partils/head') %>
        <title>All Blogs</title>
</head>
<body class="bg-primary-subtle d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <%- include('partils/navbar') %>
        <!-- Dynamic Data With Database -->
        <div class="container mt-4 flex-grow-1">
            <div class="row g-4">
                <% blogs.forEach(blog=> { %>
                    <div class="col-md-3" style="box-shadow: 0px 0px red;">
                        <div class="card">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="Image Not Found"
                                style="height:200px; object-fit:cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <p class="card-text flex-grow-1">
                                    <%= blog.body %>
                                </p>
                                <div class="d-flex justify-content-between">
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm w-50 me-2">View</a>
                                    <a href="#" class="btn btn-danger btn-sm w-50 me-2">Delete</a>
                                    <a href="#" class="btn btn-warning btn-sm w-50">Update</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <!-- Footer -->
        <footer>
            <%- include('partils/footer') %>
        </footer>

        <!-- Scripts -->
        <%- include('partils/scripts') %>
</body>

</html>