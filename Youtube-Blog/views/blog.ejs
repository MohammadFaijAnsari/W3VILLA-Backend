<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partils/head') %>
    <title>All Blogs</title>
</head>

<body class="bg-primary-subtle">
    <!-- Navbar -->
    <%- include('partils/navbar') %>
    <div class="container mt-4">
        <table class="table table-bordered table-hover table-responsive">
            <thead class="table-dark">
                <tr class="text-center">
                    <td>Id</td>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <!-- <td></td> -->
                    <td><%= blog._id %></td>
                    <td><%= blog.title %></td>
                    <td><pre><%= blog.body %></pre></td>
                    <td>
                        <% if(blog.coverImageURL){ %>
                            <img src="<%= blog.coverImageURL %>" alt="Image Not Found" class="img-fluid rounded" width="100" height="100">
                        <% } else { %>
                            <span>No Image</span>
                        <% } %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer>
        <%- include('partils/footer') %>
    </footer>
    <!-- Scripts -->
    <%- include('partils/scripts') %>
</body>
</html>
