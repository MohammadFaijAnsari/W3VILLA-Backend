<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partils/head') %>
    <title>SignUp Page</title>
</head>

<body class="bg-primary-subtle">
  <!-- Navbar Add Using SSR -->
  <%- include('partils/navbar') %>
    <!-- Centered Form -->
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
      <div class="card p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center mb-4">Create Account</h3>
            <form action="/user/signup" method="post">
              <div class="mb-3">
                <label for="fullname" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter your name">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password"
                  placeholder="Enter your password">
              </div>
              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary w-50 me-2">Sign Up</button>
                <button type="reset" class="btn btn-danger w-50">Reset</button>
              </div>
              <p class="text-center mt-3 mb-0">
                Already have an account? <a href="/user/signin" class="text-decoration-none">Sign In</a>
              </p>
            </form>
      </div>
    </div>

    <!-- Footer Include -->
    <%- include('partils/footer') %>
      <%- include('partils/scripts') %>
</body>

</html>